{
    "name": "Remeber Me AnimePahe",
    "description": "Extension For Quick Resuming on animepahe",
    "version": "0.0.1",
    "manifest_version": 3,
    "action": {
        "default_popup": "build/index.html"
    },
    "permissions": [
        "storage",
        "scripting",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://animepahe.com/play/*/*"
            ],
            "js": [
                "episodeTracker.js"
            ],
            "all_frames": true,
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://animepahe.com/*"
            ],
            "js": [
                "resume.js"
            ],
            "all_frames": true,
            "run_at": "document_end"
        }
    ],
    "host_permissions": [
        "*://*/"
    ]
}